{
  "extends": [
    "stylelint-config-twbs-bootstrap"
  ],
  "reportInvalidScopeDisables": true,
  "reportNeedlessDisables": true,
  "overrides": [
    {
      "files": "**/*.scss",
      "rules": {
        "scss/selector-no-union-class-name": true
      }
    },
    {
      "files": "**/*.less",
      "customSyntax": "postcss-less",
      "rules": {
        "function-no-unknown": null,
        "import-notation": null
      }
    }
  ]
}
